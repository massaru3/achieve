<p><%= notice %></p>

<%= form_for(@contact, url: confirm_contacts_path) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
<!--#バリデーションエラーの件数を表示します。-->
      <h2><%= @contact.errors.count %>件のエラーがあります。</h2>
      <ul>
<!--# @contact.errorsは@contactをバリデーションした際のエラー情報です。-->
<!--# full_messagesは複数のエラーメッセージを表します。-->
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit %>
<% end %>

<%= link_to "お問い合わせにもどる", contacts_path %>